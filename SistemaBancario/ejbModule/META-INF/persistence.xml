<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="sistemabancario-pu">
		<jta-data-source>java:jdbc/SistemaBancarioDatasource</jta-data-source>
		<class>org.financeiro.entidades.Funcionario</class>
		<class>org.financeiro.entidades.Gerente</class>
		<class>org.financeiro.entidades.Conta</class>
		<class>org.financeiro.entidades.Correntista</class>
		<class>org.financeiro.entidades.Pessoa</class>
		<class>org.financeiro.entidades.PessoaFisica</class>
		<class>org.financeiro.entidades.DadosDeContato</class>
		<class>org.financeiro.entidades.Movimentacao</class>
		<properties>
			<property name="show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.bytecode.use_reflection_optimizer"
				value="true" />
		</properties>
	</persistence-unit>
</persistence>